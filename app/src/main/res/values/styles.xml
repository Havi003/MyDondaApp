<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base Application Theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here -->
        <item name="android:textAppearance">@style/GlobalTextStyle</item>
        <item name="colorPrimary">#6200EE</item> <!-- Customize as needed -->
        <item name="colorPrimaryDark">#3700B3</item> <!-- Customize as needed -->
        <item name="colorAccent">#03DAC5</item>
    </style>

    <!-- Global Text Style with Custom Font -->
    <style name="GlobalTextStyle" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/montserrat_regular</item> <!-- Replace with your font's name -->
        <item name="android:textColor">#000000</item> <!-- Optional: Set default text color -->
        <item name="android:textSize">16sp</item> <!-- Optional: Set default text size -->
    </style>

</resources>
